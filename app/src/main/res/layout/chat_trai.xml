<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avt_chat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/giaovien"
        app:civ_border_color="#e9e9e9"
        app:civ_border_width="0.5dp" />

    <RelativeLayout
        android:id="@+id/card_view_chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avt_chat"
        android:background="@drawable/edit_background"
        android:padding="8dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txt_chat"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textLongMessage"
            android:maxWidth="220dp"
            android:textColor="#434343"
            android:text="fdsfdsfsdfsfsfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsdfsfsfsdfsfdsfsfsdfsdfdsfdsfsdfsdfdsfsdfsdfsdfsdfsdfsdfsdfsdfsdfdsfsfdsfsfsdfsdfdsffffff" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_chat"
            android:layout_marginTop="8dp"
            android:text="đã gửi lúc 8h45"/>
    </RelativeLayout>
</RelativeLayout>